@import "../../../app.wxss";

.none{
    display: none;
}
.scroll{
    height:100%;
}
.mask{
    background: rgba(0,0,0,.4);
    width:100%;
    height:100%;
    position: fixed;
    left:0;
    top:0;
    z-index:80;
}
.sidebar{
    box-sizing: border-box;
    width:550rpx;
    height:100%;
    background: white;
    position: fixed;
    right:-550rpx;
    top:0;
    z-index:99;
}

.header{
    box-sizing: border-box;
    height:50rpx;
    background: #f4f4f4;
    padding-left:20rpx;
    color:#888;
    font-size:30rpx;
    line-height:50rpx;
}
.item{
    box-sizing: border-box;
    height:242rpx;
    padding-left:40rpx;
    border-bottom:2rpx solid #f4f4f4;
}
.item .left{
    box-sizing: border-box;
    width:210rpx;
    height:158rpx;
    margin-right:34rpx;
}
.item .left image{
    display: block;
    width:100%;
    height:100%;
}
.item .right{
    width:230rpx;
}
.item .right .top{
    font-size:36rpx;
}
.item .right .bottom{
    font-size:30rpx;
    color:#ff7400;
}
.item .to{
    display: block;
    width:10rpx;
    height:22rpx;
}
.weui-search-bar__form{
    overflow: hidden!important;
}