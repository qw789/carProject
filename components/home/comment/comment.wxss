.item{
    overflow: hidden;
}
.item .til{
    box-sizing: border-box;
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-start;
    align-items: flex-start;
    padding:26rpx 0 24rpx;
}
.item .til .left{
    box-sizing: border-box;
    width:70rpx;
    height:70rpx;
    border-radius:50%;
    margin-right:20rpx;
}
.item .til .left image{
    display: block;
    width:100%;
    height:100%;
}
.item .til .right{
    display: inline-block;
}
.item .til .right .top{
    color:#353535;
    font-size:30rpx;
}
.item .til .right .bottom{
    color:#b2b2b2;
    font-size:24rpx;
}
.item .content{
    font-size:30rpx;
    line-height:42rpx;
    color:#353535;
    padding-left:90rpx;
    padding-right:30rpx;
    padding-bottom:32rpx;
    border-bottom:2rpx solid #f4f4f4;
}

.fixed{
    position: fixed;
    left:0;
    bottom:0;
    background: white;
    height:100rpx;
    box-sizing: border-box;
    padding:0 40rpx;
    width:100%;
    z-index:100;
}
.x{
    height:120rpx!important;
    padding-bottom:20rpx!important;
}
.fixed image{
    display: block;
    width:37rpx;
    height:37rpx;
}
.fixed input{
    box-sizing: border-box;
    padding-left:25rpx;
    height:76rpx;
    width:330rpx;
    background: #f4f4f4;
    border-radius:10rpx;
}
.fixed .placeholder{
    color:#8e8e8e;
    font-size:28rpx;
}
.fixed .right{
    width:276rpx;
    position: relative;
    height:100%;
}
.comments{
    position: absolute;
    left:40rpx;
    top:20rpx;
    font-size:24rpx;
    line-height:1;
    color:#ff7400;
}
button{
    position: absolute;
    right:30rpx;
}
.no-comment{
    height:300rpx;
    line-height:300rpx;
    color:#b2b2b2;
    text-align: center;
    font-size:36rpx;
}