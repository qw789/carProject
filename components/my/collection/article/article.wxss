@import "../../../../app.wxss";

.con-item{
    box-sizing: border-box;
    height:216rpx;
    padding:30rpx;
    border-bottom:2rpx solid rgb(244,244,244);
    background: white;
}
.con-item-imgs{
    box-sizing: border-box;
    height:300rpx;
    padding:20rpx 30rpx;
    border-bottom:2rpx solid rgb(244,244,244);
    background: white;
}
.con-item-imgs .imgs-til{
    margin-bottom:10rpx;
}
.con-item-imgs .imgs-comment{
    margin-top:10rpx;
}
.con-item .img{
    box-sizing: border-box;
    width:210rpx;
    height:156rpx;
    margin-right:30rpx;
    background: yellow;
}
.con-item .img image{
    display: block;
    width:100%;
    height:100%;
}
.con-item .imgs image{
    display: block;
    width:210rpx;
    height:158rpx;
}
.con-item .item-con{
    flex: 1;
    box-sizing: border-box;
    height:100%;
    width:100%;
    display:flex;
    flex-flow: column nowrap;
    justify-content: space-between;
}
.con-item .til{
    font-size:34rpx;
    padding-bottom:50rpx;
}
.con-item .comment{
    color:rgb(178,178,178);
    font-size:26rpx;
}
