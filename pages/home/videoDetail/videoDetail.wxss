@import "../audioDetail/audioDetail.wxss";
.container{
    padding-top:420rpx;
    position: relative;
    min-height:100%;
    box-sizing: border-box;
    background: white;
}
.one-comment{
    overflow: hidden;
    height:100%;
}
.hidden{
    overflow: hidden;
}
.video{
    background: white;
    
}
.home-video{
    width:100%;
    height:420rpx;
    position: fixed;
    left:0;
    top:0;
    z-index:100;
}
#home-video{
    display: block;
    width:100%;
    height:420rpx;

}
.title{
    margin-bottom:0;
}
.share{
    position: fixed!important;
    right:20rpx!important;
    bottom:20rpx;
    width:50rpx;
    height:50rpx;
    background: none;
    z-index:100;
}
.share::after{
    border:0!important;
}
.scroll{
    width:100%;
    height:800rpx;

}