.container{
    line-height: 1;
    padding-bottom:80rpx;
    padding-top:80rpx;
    min-height:100%;
}
.fixed-bottom{
    position: fixed;
    left: 0;
    bottom:0;
    width:100%;
    height:116rpx;
    background: white;
    box-sizing: border-box;
    padding:0 20rpx;
}
.fixed-bottom input{
    width:540rpx;
    height:60rpx;
    border-radius: 8rpx;
    background: #f4f4f4;
    padding-left:20rpx;
}
.fixed-bottom .placeholder{
    font-size:28rpx;
    color:#888;
}
.fixed-bottom .btn{
    margin-left: 20rpx;
    border-radius: 8rpx;
    background: #ff7400;
    color: white;
    width:150rpx;
    height:60rpx;
    font-size:26rpx;
    line-height:60rpx;
    text-align: center;
}