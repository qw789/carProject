@import "../../../app.wxss";

.container{
    line-height:1;
}
.header{
    height:160rpx;
    background: white;
    margin-bottom:10rpx;
    padding:0 30rpx;
}
.header .left{
    font-size:34rpx;
}
.header .right .avatar{
    display: block;
    width:100rpx;
    height:100rpx;
    border-radius:100%;
    margin-right:20rpx;
}
.header .right .to{
    display: block;
    width:12rpx;
    height:24rpx;
}

.detail{
    background: white;
    padding-left:30rpx;
    font-size:34rpx;
    margin-bottom:10rpx;
}
.detail .phone{
    color:#438cca;
}
.detail .item{
    height:88rpx;
    padding-right:30rpx;
    position: relative;
}
.detail .name{
    position: relative;
}
.detail .item input{
    position: absolute;
    right:0;
    top:20rpx;
}
.detail .border{
    border-bottom:2rpx solid #ececec;
}

.information{
    background: white;
    height:318rpx;
    box-sizing: border-box;
    padding:30rpx;
    position: relative;
}
.information .head{
    font-size:26rpx;
    color:#b2b2b2;
    padding-bottom:20rpx;
}
.information .placeholder{
    font-size:34rpx;
    color:#888;
}
textarea{
    width:100%;
    height:185rpx;
}
.btn{
    padding:30rpx;
    padding-bottom:60rpx;
    position: absolute;
    bottom:0;
    left:0;
    width:100%;
    box-sizing: border-box;
}
.btn button{
    color:white;
    background: #ff7400;
    border:0;
}
.placeholder{
    color:#b2b2b2;
}
.introNum{
    position: absolute;
    right:20rpx;
    bottom:20rpx;
    color:#b2b2b2;
    font-size:30rpx;
}
.red{
    color:red;
}
.save-err{
    font-size:30rpx;
    color:red;
    margin-bottom:20rpx;
}
.placeholder-text{
    font-size:34rpx;
}