<view class="container">
    <view class="header">
        <view class="avatar"
              bindtap="toEdit">
            <image src="{{avatar}}"
                   mode="aspectFill"></image>
        </view>
        <view class="name">{{nickName}}</view>
    </view>

    <view class="list">
        <view class="item collection row-start"
              bindtap="toCollection">
            <image class="icon" src="../../images/icon_wd_shc.png"></image>
            <view class="font">我的收藏</view>
            <image class="to" src="../../images/icon_gd_r.png"></image>
        </view>
        <view class="item collection row-start"
              bindtap="toAddress">
            <image class="icon" src="../../images/icon_wd_dzh.png"></image>
            <view class="font">我的地址</view>
            <image class="to" src="../../images/icon_gd_r.png"></image>

        </view>
        <view class="item collection row-start"
              bindtap="toAnswer">
            <image class="icon" src="../../images/icon_wd_wd.png"></image>
            <view class="font">问答中心</view>
            <image class="to" src="../../images/icon_gd_r.png"></image>
        </view>
        <view class="item collection row-start"
              bindtap="toMessage">
            <image class="icon" src="../../images/icon_wd_xx.png"></image>
            <view class="font">我的消息</view>
            <image class="to" src="../../images/icon_gd_r.png"></image>
        </view>
        <view class="item collection row-start"
              bindtap="toHistory">
            <image class="icon" src="../../images/icon_wd_ll.png"></image>
            <view class="font">浏览记录</view>
            <image class="to" src="../../images/icon_gd_r.png"></image>
        </view>
        <view class="item collection row-start border-none"
              bindtap="toFeedback">
            <image class="icon" src="../../images/icon_wd_yj.png"></image>
            <view class="font">意见反馈</view>
            <image class="to" src="../../images/icon_gd_r.png"></image>
        </view>
    </view>
</view>
